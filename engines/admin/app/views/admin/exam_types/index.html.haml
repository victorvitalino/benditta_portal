.row
  .column
    %h2.ui.header
      Tipos de exame 
      .sub.header 
        Visualização de tipos de exame cadastrados
  .column
    .mini-divider
    = link_to "+ Adicionar Novo Tipo", new_exam_type_path, remote: true, class: 'ui button blue', data: { disable_with:  t(:disable_with)}
.divider
.row
  .column
    .ui.segment
      = simple_form_for url_for, method: :get do |f|
        .fields
          .field.two.wide
            = f.input :by_cod, label: "Código"
          .field.four.wide
            = f.input :by_name, label: "Nome"
          .field.two.wide
            = f.input :by_status, label: "Situação", as: :select, include_blank: "Todos" 
          .field.two.wide
            = f.submit t(:filter), name: nil, class: 'ui button green filter'
.divider
.row
  .column
    %table.ui.table.striped.bordered.celled
      %thead
        %tr
          %th.collapsing Cod.
          %th Nome
          %th.collapsing Situação
          %th.collapsing Data de cadastro
          %th 
      %tbody.index
        = render 'index'